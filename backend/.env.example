# ===========================================
# Support Ticket AI Workflow Configuration
# ===========================================
# Copy this file to .env and update values

# -------------------------------------------
# LLM Provider Configuration
# -------------------------------------------
# Options: 'openrouter' (default) or 'openai'
LLM_PROVIDER=openrouter

# -------------------------------------------
# OpenRouter Configuration (Recommended)
# -------------------------------------------
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=http://localhost:8000
OPENROUTER_APP_NAME=Support Ticket AI Workflow

# -------------------------------------------
# OpenAI Configuration (Fallback)
# -------------------------------------------
# Only needed if LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-api-key-here

# -------------------------------------------
# Model Configuration
# -------------------------------------------
# OpenRouter format: provider/model
# Popular options:
#   - anthropic/claude-3.5-sonnet (recommended)
#   - anthropic/claude-3-haiku (fast, cheap)
#   - openai/gpt-4o
#   - openai/gpt-4o-mini
#   - google/gemini-pro-1.5
#   - meta-llama/llama-3.1-70b-instruct
DEFAULT_MODEL=anthropic/claude-3.5-sonnet
FALLBACK_MODEL=openai/gpt-4o-mini
MAX_TOKENS=4096
TEMPERATURE=0.3

# -------------------------------------------
# Database Configuration
# -------------------------------------------
# For local development (without Docker):
DATABASE_URL=postgresql+asyncpg://ticketuser:ticketpass@localhost:5432/ticket_workflow

# For Docker (use these with docker-compose):
DB_USER=ticketuser
DB_PASSWORD=ticketpass
DB_NAME=ticket_workflow
DB_PORT=5432

# -------------------------------------------
# Redis Configuration (optional)
# -------------------------------------------
REDIS_PORT=6379

# -------------------------------------------
# Application Configuration
# -------------------------------------------
APP_NAME=Support Ticket AI Workflow
APP_PORT=8000
DEBUG=false
LOG_LEVEL=info

# -------------------------------------------
# Workflow Configuration
# -------------------------------------------
WORKFLOW_TIMEOUT_SECONDS=30

# -------------------------------------------
# Feature Flags
# -------------------------------------------
# Set to false to use rule-based fallback
ENABLE_AI_CLASSIFICATION=true
ENABLE_AI_EXTRACTION=true
ENABLE_RESPONSE_GENERATION=true

# -------------------------------------------
# AI Configuration
# -------------------------------------------
# Minimum confidence threshold for AI results
AI_CONFIDENCE_THRESHOLD=0.6
